{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile",
      "type": "shell",
      "command": "yarn compile",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"],
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/C"]
        }
      }
    },
    {
      "label": "watch",
      "type": "shell",
      "command": "yarn watch",
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"],
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/C"]
        }
      }
    }
  ]
}
